[DEFAULT]
# Время бана. Используйте 'h' для часов, 'd' для дней.
bantime = 24h

[sshd]
enabled = true
# Количество неудачных попыток до бана
maxretry = 3


[recidive]
enabled = true
# Искать в логе fail2ban
logpath = /var/log/fail2ban.log
# Блокировать, если IP был забанен 5 раз в течение 1 дня
findtime = 1d
maxretry = 5
# Время бана - 1 неделя
bantime = 1w
